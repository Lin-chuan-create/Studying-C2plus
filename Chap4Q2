//修改程序清单4.4，使用C++ string类而不是char数组。
#include<iostream>
#include<string>
int main()
{
	using namespace std;
	string name, dessert;
	cout << "Enter your name:\n";
	getline(cin, name);
	cout << "Enter your favorite dessert:\n";
	getline(cin, dessert);
	cout << "I have some delicious " << dessert;
	cout << " for you, " << name << "\n";
	return 0;
}
